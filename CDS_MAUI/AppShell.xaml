<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CDS_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CDS_MAUI.Views"
    Title="Система управления автосалоном">

    <ShellContent
        Title="Автомобили"
        ContentTemplate="{DataTemplate local:CarsPage}"
        Route="CarsPage" />

    <ShellContent
        Title="Заказы"
        ContentTemplate="{DataTemplate local:OrdersPage}"
        Route="OrdersPage" />

    <ShellContent
        Title="Отчеты"
        ContentTemplate="{DataTemplate local:ReportsPage}"
        Route="ReportsPage" />

</Shell>
