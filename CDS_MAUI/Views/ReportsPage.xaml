<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CDS_MAUI.ViewModels.ReportsVM"
             xmlns:models="clr-namespace:CDS_MAUI.Models"
             x:Class="CDS_MAUI.Views.ReportsPage"
             x:DataType="viewmodels:ReportsViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="30, 10" Spacing="5" HorizontalOptions="Fill">
            <Label Text="Заказы за период"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalOptions="Center"/>

            <Border Padding="15"
                    Margin="10"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}"
                    StrokeShape="RoundRectangle 12"
                    Stroke="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                    StrokeThickness="2">

                <VerticalStackLayout Spacing="20">
                    <Grid ColumnDefinitions="*, *, *, *, *" ColumnSpacing="20">
                        <Label Grid.Column="0"
                               Text="Выберете начальную дату:"
                               VerticalOptions="Center"/>

                        <DatePicker Grid.Column="1"
                                    Date="{Binding PeriodFromDate}"/>

                        <Label Grid.Column="2"
                               Text="Выберете конечную дату:"
                               VerticalOptions="Center"/>

                        <DatePicker Grid.Column="3"
                                    Date="{Binding PeriodToDate}"/>

                        <Button Grid.Column="4"
                                Text="{Binding PeriodReportButtonText}"
                                FontAttributes="Bold"
                                Command="{Binding ExecutePeriodReportCommand}"/>
                    </Grid>

                    <Grid IsVisible="{Binding IsPeriodReportVisible}" ColumnDefinitions="*, *" ColumnSpacing="20">
                        <Border Grid.Column="0"
                                Padding="15"
                                Margin="10"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}"
                                StrokeShape="RoundRectangle 12"
                                StrokeThickness="2">

                            <Label Text="{Binding PeriodOrdersCount}"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </Border>

                        <Border Grid.Column="1"
                                Padding="15"
                                Margin="10"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}"
                                StrokeShape="RoundRectangle 12"
                                StrokeThickness="2">

                            <Label Text="{Binding PeriodOrdersSum}"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </Border>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <Label Text="Заказы конкретного менеджера"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalOptions="Center"/>

            <Border Padding="15"
                    Margin="10"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}"
                    StrokeShape="RoundRectangle 12"
                    Stroke="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                    StrokeThickness="2">

                <VerticalStackLayout Spacing="20">
                    <Grid ColumnDefinitions="*, *, *, *, *" ColumnSpacing="20">
                        <Label Grid.Column="0" 
                               Grid.ColumnSpan="2" 
                               Text="Выберете менеджера:"
                               VerticalOptions="Center"/>

                        <Picker Grid.Column="2" Grid.ColumnSpan="2" ItemsSource="{Binding Managers}" SelectedItem="{Binding SelectedManager}"/>

                        <Button Grid.Column="4"
                                Text="{Binding ManagerReportButtonText}"
                                FontAttributes="Bold"
                                Command="{Binding ExecuteManagerReportCommand}"/>
                    </Grid>

                    <Grid IsVisible="{Binding IsManagerReportVisible}" ColumnDefinitions="*, *" ColumnSpacing="20">
                        <Border Grid.Column="0"
                                Padding="15"
                                Margin="10"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}"
                                StrokeShape="RoundRectangle 12"
                                StrokeThickness="2">

                            <Label Text="{Binding ManagerOrdersCount}"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </Border>

                        <Border Grid.Column="1"
                                Padding="15"
                                Margin="10"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}"
                                StrokeShape="RoundRectangle 12"
                                StrokeThickness="2">

                            <Label Text="{Binding ManagerOrdersSum}"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </Border>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>