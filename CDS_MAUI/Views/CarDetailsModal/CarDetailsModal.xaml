<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CDS_MAUI.ViewModels.CarsVM"
             x:Class="CDS_MAUI.Views.CarDetailsModal.CarDetailsModal"
             x:DataType="viewmodels:CarDetailsViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, *, Auto"
              RowSpacing="0"
              Margin="20, 50">

            <!-- Фон с закруглениями -->
            <Border Grid.RowSpan="4"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                    Stroke="{StaticResource Primary}"
                    StrokeThickness="1"/>

            <!-- Кнопка закрытия -->
            <Button Grid.Row="0"
                    Text="✕"
                    FontSize="20"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    HorizontalOptions="End"
                    VerticalOptions="Start"
                    Margin="10"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                    Command="{Binding CloseModalCommand}"
                    IsEnabled="{Binding IsNotBusy}"/>

            <!-- Заголовок -->
            <Label Grid.Row="1"
                   Text="{Binding Car.DisplayInfo}"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

            <!-- Контент -->
            <Grid Grid.Row="2"
                  ColumnDefinitions="*,*"
                  ColumnSpacing="20"
                  Padding="20,0">

                <!-- Изображение -->
                <Border Grid.Column="0"
                        HeightRequest="300"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="Transparent"
                        VerticalOptions="Center">
                    <VerticalStackLayout HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         Spacing="10">
                        <Image Source="dotnet_bot.png"
                               HeightRequest="200"
                               WidthRequest="200"
                               Aspect="AspectFit"/>
                        <Label Text="Фото автомобиля"
                               FontSize="12"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Детали -->
                <VerticalStackLayout Grid.Column="1"
                                     Spacing="15">

                    <Grid ColumnDefinitions="*,*">
                        <Label Text="VIN:"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Grid.Column="1"
                               Text="{Binding Car.VIN}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*">
                        <Label Text="Год выпуска:"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Grid.Column="1"
                               Text="{Binding Car.Year}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*">
                        <Label Text="Объем двигателя:"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Grid.Column="1"
                               Text="{Binding Car.EngineVolume, StringFormat='{0} л'}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*">
                        <Label Text="Мощность:"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Grid.Column="1"
                               Text="{Binding Car.Power, StringFormat='{0} л.с.'}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*">
                        <Label Text="Коробка передач:"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Grid.Column="1"
                               Text="{Binding Car.Transmission}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*">
                        <Label Text="Привод:"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Grid.Column="1"
                               Text="{Binding Car.DriveType}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*">
                        <Label Text="Тип двигателя:"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Grid.Column="1"
                               Text="{Binding Car.EngineType}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*">
                        <Label Text="Тип кузова:"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Grid.Column="1"
                               Text="{Binding Car.BodyType}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*">
                        <Label Text="Цвет:"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Grid.Column="1"
                               Text="{Binding Car.Color}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*">
                        <Label Text="Пробег:"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Grid.Column="1"
                               Text="{Binding Car.Mileage, StringFormat='{0:N0} км'}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*, *">
                        <Label Text="Доступность:"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        <Label Grid.Column="1"
                               Text="{Binding Car.Availability}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    </Grid>
                </VerticalStackLayout>
            </Grid>

            <!-- Цена и кнопка -->
            <VerticalStackLayout Grid.Row="3"
                                 Spacing="20"
                                 Padding="0,30,0,30"
                                 HorizontalOptions="Center">

                <Label Text="{Binding Car.FormattedPrice}"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Primary}"/>

                <Button Text="Оформить заказ"
                        CornerRadius="10"
                        HeightRequest="50"
                        WidthRequest="220"
                        FontSize="16"
                        FontAttributes="Bold"
                        Command="{Binding ProcessOrderCommand}"
                        IsEnabled="{Binding IsNotBusy}"/>
            </VerticalStackLayout>

            <!-- Индикатор загрузки -->
            <ActivityIndicator Grid.RowSpan="4"
                               IsVisible="{Binding IsBusy}"
                               IsRunning="{Binding IsBusy}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               HeightRequest="50"
                               WidthRequest="50"/>
        </Grid>
    </ScrollView>
</ContentPage>